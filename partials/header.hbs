<header id="masthead" class="site-header" role="banner">
    <div class="container">

        <div class="gravatar">
            {{#if @blog.logo}}<img src="{{@blog.logo}}" alt="Blog Logo" class="avatar avatar-100 photo" height="100" width="100" />{{/if}}
        </div><!--/ author -->

        <div id="brand">
            <h1 class="site-title"><a href="{{@blog.url}}" title="{{@blog.title}}" rel="home">{{@blog.title}}</a> &mdash; <span>{{@blog.description}}</span></h1>
        </div><!-- /brand -->

        <nav role="navigation" class="site-navigation main-navigation">

        </nav><!-- .site-navigation .main-navigation -->

        <div class="clear"></div>
    </div><!--/container -->

</header>
