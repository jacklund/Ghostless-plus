{{!< default}}

{{> header}}

<div class="container">

    <div id="primary">
        <div id="content" role="main">

{{! Each post will be output using this markup }}
{{#foreach posts}}

<article class="post">
    <h1 class="title"><a href="{{url}}">{{{title}}}</a></h1>
        <!-- <div class="post-meta">
            <span class="comments-link">&nbsp;</span>
        </div>--><!--/post-meta -->
	<div class="updated">
	  {{date published_at format='MMMM, DD YYYY'}}
	</div>
	
        <div class="the-content">
	    {{content words="100"}}
            <p><a href="{{url}}" class="more-link">Continue...</a></p>
	</div><!-- the-content -->
						
	<div class="meta clearfix">
	    <div class="category">
                <ul class="post-categories">
                    {{#tags}}
                    <li>{{name}}</li>
                    {{/tags}}
                </ul>
            </div>
            <div class="tags"></div>
	</div><!-- Meta -->
</article>

{{/foreach}}

{{!! After all the posts, we have the previous/next pagination links }}
{{pagination}}


        </div><!-- #content .site-content -->
    </div><!-- #primary .content-area -->
</div>

{{> footer}}
